{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "通常実行",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "ビルド用実行(本番)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/build_release.py",
            "console": "integratedTerminal"
        },
        {
            "name": "ビルド用実行(開発)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/build_debug.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Webサーバ起動",
            "type": "debugpy",
            "request": "launch",
            "module": "http.server",
            "args": ["8000"],
            "console": "integratedTerminal"
        }
    ]
}